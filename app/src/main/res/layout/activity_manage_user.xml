<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:padding="10dp"
            android:id="@+id/imgBack"
            android:src="@drawable/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/qlnv"
            android:textSize="20sp" />
    </RelativeLayout>



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        >

        <TableRow
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã Phòng Ban:" />

            <EditText
                android:padding="4dp"
                android:background="@drawable/rounded_edittext"
                android:id="@+id/editmapb"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="10" >

                <requestFocus />
            </EditText>

        </TableRow>

        <TableRow
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Phòng Ban:" />

            <EditText
                android:padding="4dp"
                android:background="@drawable/rounded_edittext"
                android:id="@+id/editTenpb"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:ems="10"
                />

        </TableRow>

        <TableRow
            android:padding="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:padding="8dp"
                android:background="@drawable/round_button"
                android:layout_gravity="center"
                android:id="@+id/btnluupb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:textSize = "16dp"
                android:textColor="@color/white"
                android:text="Lưu Phòng Ban" />

        </TableRow>
    </TableLayout>

    <TextView
        android:paddingLeft="8dp"
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/peach"
        android:text="Danh sách phòng ban"
        android:textColor="#FFFFFF"
        android:gravity="center_vertical"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/lvphongban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>