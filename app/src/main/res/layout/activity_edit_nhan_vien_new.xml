<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <ImageView
                    android:padding="10dp"
                    android:id="@+id/imgBack"
                    android:src="@drawable/ic_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="@string/edit_user"
                    android:textSize="20sp" />
            </RelativeLayout>


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                >

                <TableRow
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên Nhân viên:" />

                    <EditText
                        android:padding="4dp"
                        android:background="@drawable/rounded_edittext"
                        android:id="@+id/editTenNV"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:ems="10"
                        />
                </TableRow>

                <TableRow
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:id="@+id/tableRow5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ:" />

                    <EditText
                        android:padding="4dp"
                        android:background="@drawable/rounded_edittext"
                        android:id="@+id/editDiachi"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:ems="10"
                        />
                </TableRow>

                <TableRow
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:id="@+id/tableRow6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email:" />

                    <EditText
                        android:padding="4dp"
                        android:background="@drawable/rounded_edittext"
                        android:id="@+id/editEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:ems="10"
                        />
                </TableRow>


                <TableRow
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:id="@+id/tableRow7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Điện thoại:" />

                    <EditText
                        android:padding="4dp"
                        android:background="@drawable/rounded_edittext"
                        android:id="@+id/editSDT"
                        android:inputType="numberDecimal"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:ems="10"
                        />
                </TableRow>

                <TableRow
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:id="@+id/tableRow8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CMND:" />

                    <EditText
                        android:padding="4dp"
                        android:background="@drawable/rounded_edittext"
                        android:id="@+id/editCMND"
                        android:inputType="numberDecimal"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:ems="10"
                        />
                </TableRow>

                <TableRow
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:id="@+id/tableRow11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lương:" />

                    <EditText
                        android:padding="4dp"
                        android:background="@drawable/rounded_edittext"
                        android:id="@+id/editLuong"
                        android:inputType="numberDecimal"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:ems="10"
                        />
                </TableRow>

                <TableRow
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:id="@+id/tableRow9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số Tài khoản :" />

                    <EditText
                        android:padding="4dp"
                        android:background="@drawable/rounded_edittext"
                        android:id="@+id/editSTK"
                        android:inputType="numberDecimal"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:ems="10"
                        />
                </TableRow>

                <TableRow
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:id="@+id/tableRow10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày sinh:" />

                    <TextView
                        android:padding="4dp"
                        android:background="@drawable/rounded_edittext"
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        />
                </TableRow>

                <TableRow
                    android:layout_marginTop = "12dp"
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giới tính:" />

                    <RadioGroup
                        android:id="@+id/radioGroup1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/radNam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Nam" />

                        <RadioButton
                            android:id="@+id/radNu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nữ" />
                    </RadioGroup>
                </TableRow>

                <TableRow
                    android:layout_marginTop = "16dp"
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:padding="8dp"
                        android:background="@drawable/round_button"
                        android:layout_gravity="center"
                        android:id="@+id/btnxoatrang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:textColor="@color/white"
                        android:textSize = "16dp"
                        android:text="Xoá trắng" />

                    <TextView
                        android:padding="8dp"
                        android:background="@drawable/round_button"
                        android:layout_gravity="center"
                        android:id="@+id/btnluunv"
                        android:textSize = "16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:textColor="@color/white"
                        android:text="Lưu nhân viên" />

                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>




</LinearLayout>